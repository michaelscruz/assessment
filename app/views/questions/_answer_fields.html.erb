<div class="nested-fields">
  <div class="field form-group">
    <%= f.label :text, "Answer text" %>
    <%= f.text_field :text, autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :value, "Answer value" %>
    <%= f.number_field :value, autofocus: true, class: "form-control" %>
  </div>

  <%= link_to_remove_association "remove answer", f %>
</div>